 <mvc:View controllerName="com.ct.CountdownTimer.controller.Tiles"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout">

  <Page id="tiles" showHeader="false">

    <l:VerticalLayout>
        <l:HorizontalLayout content="{tiles>/}" allowWrapping="true">
            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
            header="{tiles>title}"
            press="press(${tiles>route})" frameType= "TwoByHalf">

            </GenericTile>
        </l:HorizontalLayout>
    </l:VerticalLayout>
  </Page>

</mvc:View>